<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/image1"
        android:src="@drawable/ic_devian_art"
        android:layout_marginHorizontal="101dp"
        android:layout_marginTop="70dp"
        />
    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_devian"
        android:layout_marginTop="43dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="39dp"
        />
    <TextView
        android:id="@+id/view2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Unleash the Magic of Creation!"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="40dp"
        android:textStyle="italic"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2_3"
        android:text="SIGN UP WITH FACEBOOK"
        android:textSize="16sp"
        android:backgroundTint="#3A5998"
        app:layout_constraintBottom_toTopOf="@id/button1"
        app:icon="@drawable/ic_facebook"
        app:iconSize="27dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="36dp"
        app:cornerRadius="10dp"
        />

    <com.google.android.material.button.MaterialButton
    android:id="@+id/button1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/button"
    android:text="SIGN UP WITH EMAIL"
    android:textSize="16sp"
    android:backgroundTint="#228812"
    app:icon="@drawable/ic_letter"
        app:iconSize="27sp"
        android:layout_marginTop="26dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="60dp"
        app:cornerRadius="10dp"
    />


    <TextView
        android:id="@+id/viewdevian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/helpertext"
        android:text="Already have an account?"
        android:textStyle="italic"
        android:textSize="16sp"
        android:layout_marginTop="47dp"
        android:layout_marginStart="93dp"
        android:layout_marginBottom="80dp"
        />

    <TextView
        android:id="@+id/helpertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/viewdevian"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:text="Log In"
        android:textColor="#00B5EE"
        android:textStyle="italic"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="80dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>