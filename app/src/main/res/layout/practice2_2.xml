<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toBottomOf="@id/inputtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:text="Get Started"
        android:textColor="#252525"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/text2"
        app:layout_constraintEnd_toEndOf="@id/image_logo"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="@id/image_logo"
        app:layout_constraintTop_toTopOf="@id/image_logo"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text=" by creating a free account."
        android:textColor="#252525"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/inputtext"
        app:layout_constraintEnd_toEndOf="@id/image_logo"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="@id/image_logo"
        app:layout_constraintTop_toBottomOf="@id/text1"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxBackgroundColor="#33C4C4C4"
        android:hint="Full name"
        app:layout_constraintTop_toBottomOf="@id/image_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/inputtext1"

        >


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/ic_user"
            android:singleLine="true"
            android:autoLink="email"
            android:inputType="textEmailAddress"
            android:paddingStart="22dp"

            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputtext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:hint="Valid email"
        app:boxBackgroundColor="#33C4C4C4"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/inputtext2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputtext">





        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoLink="email"
            android:drawableEnd="@drawable/ic_mail"
            android:paddingStart="22dp"
            android:singleLine="true"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputtext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxBackgroundColor="#33C4C4C4"
        android:hint="phone number"
        app:layout_constraintTop_toBottomOf="@id/inputtext1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/inputtext3"

        >


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/ic_smartphone"
            android:singleLine="true"
            android:autoLink="email"
            android:inputType="textEmailAddress"
            android:paddingStart="22dp"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputtext3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxBackgroundColor="#33C4C4C4"
        android:hint="Strong Password"
        app:layout_constraintTop_toBottomOf="@id/inputtext2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/materialbutton"
        android:layout_marginTop="10dp"
        >


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/ic_lock"
            android:singleLine="true"
            android:autoLink="email"
            android:inputType="textEmailAddress"
            android:paddingStart="22dp"

            />

    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputtext3"
        app:layout_constraintBottom_toBottomOf="@id/viewtext"
        android:text="Next"
        android:textSize="20dp"
        app:icon="@drawable/baseline_navigate_next_24"
        app:iconGravity="textEnd"
        app:iconSize="35dp"
        app:cornerRadius="10dp"
        android:layout_marginHorizontal="30dp"
        app:backgroundTint="#FF3951"
        android:autoLink="email"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/viewtext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alraedy a member?"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/guideline2_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialbutton"
        android:layout_marginStart="83dp"/>

    <TextView
            android:id="@+id/viewtext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/guideline2_1"
            app:layout_constraintStart_toEndOf="@id/viewtext"
            android:text="Log in"
            android:textSize="13sp"
            android:textColor="#FF3952"
            android:paddingStart="5dp"
         />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>