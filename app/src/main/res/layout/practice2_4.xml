<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/view2_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text2_4"
        android:text="SIGN UP WITH EMAIL"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="130dp"
        />

    <TextView
        android:id="@+id/text2_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view2_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit2_4"
        android:text="FULL NAME"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="252dp"
        android:layout_marginStart="40dp"
        />

    <EditText
        android:id="@+id/edit2_4"
        android:layout_width="310dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/text2_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text12_4"
        android:background="#D9D9D9"
        android:singleLine="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/text12_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit2_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit12_4"
        android:text="EMAIL ADDRESS"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginEnd="213dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        />

    <EditText
        android:id="@+id/edit12_4"
        android:layout_width="310dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/text12_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text22_4"
        android:background="#D9D9D9"
        android:singleLine="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="5dp"

        />



    <TextView
        android:id="@+id/text22_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit12_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit22_4"
        android:text=" CONFIRM PASSWORD"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginEnd="166dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="44dp"
        />

    <EditText
        android:id="@+id/edit22_4"
        android:layout_width="310dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/text22_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button2_4"
        android:background="#D9D9D9"
        android:singleLine="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="5dp"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2_4"
        android:layout_width="231dp"
        android:layout_height="53dp"
        app:layout_constraintTop_toBottomOf="@id/edit22_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text32_4"
        android:backgroundTint="#228812"
        android:text="SIGN UP"
        android:textSize="16sp"
        android:layout_marginTop="31dp"
        android:layout_marginHorizontal="80dp"
        app:cornerRadius="10dp"
        />


    <TextView
        android:id="@+id/text32_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button2_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="              By continuing, you agree to
         accept our Privacy   Policy Terms of Services "
        android:textSize="13sp"
        android:layout_marginTop="23dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="120dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>