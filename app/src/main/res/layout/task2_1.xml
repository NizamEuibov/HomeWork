<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#CE8FFF"
    android:padding="40dp"
    tools:ignore="MissingDefaultResource">


    <View
        android:id="@+id/view2_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4F1A57"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view2_2"
        />

    <View
        android:id="@+id/view2_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4F1A57"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/view2_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view2_3"
        android:layout_marginHorizontal="20dp"
        />

    <View
        android:id="@+id/view2_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4F1A57"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view2_2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>