<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:animateLayoutChanges="true"
android:padding="40dp"
android:background="#CE8FFF">

<View
    android:id="@+id/view5_1"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginRight="40dp"
    android:background="#4f1A57"
   app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/view5_3"

    />
<View
    android:id="@+id/view5_2"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="#4f1A57"
   app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/view5_3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/view5_1"
    android:layout_marginStart="40dp"
    app:layout_constraintVertical_weight="1"
    />
<View
    android:id="@+id/view5_3"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="#4f1A57"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/view5_2"
    app:layout_constraintStart_toEndOf="@id/view5_1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintVertical_weight="3"
    android:layout_marginTop="40dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>